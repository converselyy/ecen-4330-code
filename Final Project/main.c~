/**
 * @brief displays menu for user with options for each function
 * 
 */
void menu(void) {
	// setup
	setRotation(2);
	setTextSize(3);
	fillScreen(GRAY);
	setTextColor(BLACK, GRAY);
	setCursor(0, 0);

	// print name and course number
	LCD_string_write("Brandon Cline\n");
	LCD_string_write("ECEN 4330\n");

	// print menu options
	// D: Dump
	LCD_string_write("D: Dump\n");
	// A: Check
	LCD_string_write("A: Check\n");
	// B: Move
	LCD_string_write("B: Move\n");
	// E: Edit
	LCD_string_write("E: Edit\n");
	// F: Find
	LCD_string_write("F: Find\n");
	// C: Count
	LCD_string_write("C: Count\n");
	// 1: Basic check
	LCD_string_write("1: Basic check\n");

	// then add something for the temp sensor and light sensor
}

void main(void) {
	uint8_t input;

	TFT_LCD_INIT();
	writeSomeLines();
	// fillScreen(BLACK);
	// setRotation(0);
	// testCircles(20, BLUE);
	// delay(100);
	// fillScreen(GRAY);

	setRotation(2);

	while (1) {
		menu();

		input = keyDetect();
		// input = convertAsciiHex(input);

		switch(input) {
			// put options for menu in here
			// case 'D': dump(); break;
			case 'A': check(); break;
			// case 'B': move(); break;
			// case 'E': edit(); break;
			// case 'F': find(); break;
			// case 'C': count(); break;
			case '1': basic(); break;
			default: break;
		}
	}
}